{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "downlevelIteration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "skipLibCheck": true,
    "lib": ["es2019"],
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true
  },
  "include": ["src", "test"]
}
